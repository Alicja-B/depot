<p id="notice"><%= notice %></p>
<div class="container-fluid">
<div class="row">
  
  <div class="col-xs-12 col-md-4">
    <%= image_tag(@product.image_url, size:"300x400") %>
  </div>
  <div class="col-xs-12 col-md-5">
    <h3><%= @product.title %></h3>
    <%= sanitize(@product.description) %>
    <h3>Price:
    <%= number_to_currency(@product.price) %></h3><br>
    <% if session[:user_id] %> 
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    <% else %>
      <%= button_to 'Add to Cart', line_items_path(product_id: @product), class: 'btn btn-info', remote: true %>
    <% end %>
  </div>

  
</div>
</div>